#!/bin/bash -

time_day=$(date +%Y\/%m\/%d)
time_hour=$(date +%H\:%M\:%S)
time=$time_day"  "$time_hour

echo "=========bash push========"
cd ~/bash
git add .
git status
git commit -v -m "$time"
git push origin master
echo
echo


echo "=========leetcode push========"
cd ~/leetcode
git add .
git status
git commit -v -m "$time"
git push origin master
echo
echo

count=0

while true
do
    if [ $count -lt 3 ]; then
        let count++
        sleep 1
        echo -n "==>" 
    elif [ $count -e 4 ]; then
        echo
        echo "=========finish push github=========="
        sleep 1
    else
        clear
        cd 
        exit 0
    fi
done
