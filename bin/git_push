#!/bin/bash -

time=$(date +%D)

echo "=========bash push========"
cd ~/bash
git add .
git status
git commit -v -m "$time"
git push origin master
echo
echo


echo "=========leetcode push========"
cd ~/leetcode
git add .
git status
git commit -v -m "$time"
git push origin master
echo
echo

count=0

while true
do
    if [ $count -lt 3 ]; then
        let count++
        sleep 1
        echo -n "==>" 
    else
        echo
        exit 0
    fi
done

clear
cd ~
echo "=========finish push github=========="
