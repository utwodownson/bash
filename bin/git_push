#!/bin/bash -

time_day=$(date +%Y\/%m\/%d)
time_hour=$(date +%H\:%M\:%S)
time=$time_day"  "$time_hour

echo "=========bash push========"
cd ~/bash
git add .
git status
git commit -v -m "$time"
git push origin master
echo
echo


echo "=========leetcode push========"
cd ~/leetcode
git add .
git status
git commit -v -m "$time"
git push origin master
echo
echo

count=0

while true
do
    if [ $count -lt 3 ]; then
        let count++
        echo -n "==>" 
        sleep 1
    elif [ $count -lt 4 ]; then
        let count++
        echo
        echo -n "=========finish push github=========="
        sleep 2 
    else
        clear
        cd 
        exit 0
    fi
done
