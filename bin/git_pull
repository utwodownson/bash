#!/bin/bash -

echo "=========bash pull========"
cd ~/bash
git pull
echo
echo

echo "=========leetcode pull========"
cd ~/leetcode
git pull
echo
echo

echo "=========interview pull========"
cd ~/interview
git pull
echo
echo

count=0

while true
do
    if [ $count -lt 3 ]; then
        let count++
        echo -n "==>" 
        sleep 1
    elif [ $count -lt 4 ]; then
        let count++
        echo
        echo -n "=========finish pull github=========="
        sleep 2
    else
        clear
        cd
        exit 0
    fi
done
